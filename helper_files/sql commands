#To create database
sudo -u postgres psql

CREATE DATABASE energy_db;


##TO create table

sudo -u postgres psql -d energy_db

-- Training snapshot table
CREATE TABLE IF NOT EXISTS training_snapshot (
    id SERIAL PRIMARY KEY,
    last_date DATE,
    last_values DOUBLE PRECISION[]
);

-- Feature columns table
CREATE TABLE IF NOT EXISTS feature_columns (
    id SERIAL PRIMARY KEY,
    feature_name TEXT
);
